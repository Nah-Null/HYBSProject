  <body>

            <!-- Sign Up Form -->
            <div class="container mt-5">
              <div class="row justify-content-center">
            <div class="col-md-6 form-container" id="signup-form">
              <h2 class="text-center mb-4">Sign Up</h2>
              <main class="form-signin">
                <form action="/user/register" method="POST">
                  <% if(errors != null && errors.length > 0) { %>
                    <% for(let i = 0; i < errors.length; i++) { %>
                        <p class="alert alert-danger">
                            <%= errors[i] %>
                        </p>
                    <% } %>
                <% } %>
                <div class="mb-3">
                  <label for="floatingInput">Username:</label>
                  <input type="text" name="username" value="<%= username %>" class="form-control" id="floatingInput" placeholder="Username">
                </div>
                <div class="mb-3">
                   <label for="floatingInput">Email:</label>
                  <input type="email" name="email" value="<%= email %>" class="form-control" id="floatingInput" placeholder="email">
 
                </div>
                <div class="mb-3">
                  <label for="floatingPassword">Password</label>
                  <input type="password" name="password" value="<%= password %>" class="form-control" id="floatingPassword" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary w-100">Sign Up</button>
          </form>
          <p class="text-center mt-3">Already have an account? <a href="login" onclick="toggleForm()">Login</a></p>
      </main>
  </div>
</div> 
</div>
      

